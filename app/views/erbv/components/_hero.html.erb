<%# locals: (img_src: nil, href: '#', title:, subtitle:, style: nil, theme: nil) -%>

<%= erbv_html(theme: theme, style: style) do %>
  <div>
    <div class="overlay">
      <div>
        <h3><%= title %></h3>
        <p><%= subtitle %></p>
      </div>
    </div>

    <div class="img_container">
      <img src="<%= img_src %>">
    </div>
  </div>
<% end %>

<% erbv_css do %>
  <style>
    <%= erbv_component_base_selector %> {
      > div {
        position: relative;
        width: 100%;
        height: 100vh;
      }

      .img_container {
        height: 100vh;
        position: relative;

        > img {
          position: absolute;
          width: 100%;
          height: 100%;
          object-fit: cover;
        }
      }

      .overlay {
        position: absolute;
        width: 100%;
        height: 100%;
        z-index: 88;
      }
    }
  </style>
<% end %>
