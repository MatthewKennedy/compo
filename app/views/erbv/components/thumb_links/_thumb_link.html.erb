<%# locals: (img_src: nil, href: '#', title:, subtitle:, style: nil, theme: nil) -%>

<%= erbv_html(theme: theme, style: style) do %>
  <div>
    <a href="<%= href %>">
      <div>
        <img src="<%= img_src %>">
      </div>

      <div>
        <div>
          <h3><%= title %></h3>
          <p><%= subtitle %></p>
        </div>
      </div>
    </a>
  </div>
<% end %>

<% erbv_css do %>
  <style>
    <%= erbv_component_base_selector %> {
      --color: #212529;
      --background-color: white;

      &.cta {
        --background-color: rgb(255, 224, 224);
      }

      background-color: var(--background-color);

      > div > a {
        text-decoration: none;
        color: var(--color);
        display: flex;

        &:hover img {
          scale: 1.03;
        }

        > div:nth-child(1) {
          display: flex;
          width: 33%;
          max-width: max-content;
          min-width: 150px;
          overflow: hidden;

          & img {
            width: 100%;
            font-weight: lighter;
            max-width: 100%;
            transition-duration: 500ms;
          }
        }

        > div:nth-child(2) {
          padding-inline-start: 1em;
          flex: 1;

          & h3 {
            color: var(--color);
            font-size: 1.875rem;
            font-weight: 400;
            margin-block-start: -.4rem;
            margin-block-end: 0;
          }
        }
      }
    }

    @container <%= erbv_css_container_query_id %> (width <= 620px) {
      <%= erbv_component_base_selector %> > div > a {
        display: block;

        > div:nth-child(1) {
          width: 100%;
        }

        > div:nth-child(2) {
          margin-block-start: 1rem;
          padding-inline-start: 0;
        }
      }
    }
  </style>
<% end %>
